<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huawei.hicloud.dao.VolumeDao">
	<!-- 所有字段 -->
	<sql id="base_columns">
		t.id, t.serial_number "serialNumber", t.capacity, t.disk_type "diskType", t.region, t.description
	</sql>
	
	<!-- 查询条件 -->
	<sql id="select_fragment">
		<if test="id != null and id !=''">
			id = #{id}
		</if>
		<if test="serialNumber != null and serialNumber !=''">
			and serial_number = #{serialNumber}
		</if>
		<if test="capacity != null">
			and capacity = #{capacity}
		</if>
		<if test="diskType != null and diskType !=''">
			and disk_type = #{diskType}
		</if>
		<if test="region != null and region !=''">
			and region = #{region}
		</if>
	</sql>
	
	<!-- 插入数据 -->
	<insert id="add" parameterType="com.huawei.hicloud.pojo.Volume">
		<selectKey keyProperty="id" resultType="java.lang.Integer" order="BEFORE">
			SELECT VOLUME_SEQ.NEXTVAL FROM dual
		</selectKey>
		INSERT INTO VOLUME_T (id, serial_number, capacity, disk_type, region, description)
		VALUES (#{id}, #{serialNumber},  #{capacity},  #{diskType},  #{region},  #{description})
	</insert>
	
	<!-- 删除数据 -->
	<delete id="delete" parameterType="com.huawei.hicloud.pojo.Volume">
		DELETE FROM VOLUME_T WHERE t.id = #{id}
	</delete>

	<update id="update" parameterType="com.huawei.hicloud.pojo.Volume">
		UPDATE VOLUME_T
		<set>
			<if test="serialNumber != null">
				serial_number = #{serialNumber},
			</if>
			<if test="capacity != null">
				capacity = #{capacity},
			</if>
			<if test="diskType != null">
				disk_type = #{diskType},
			</if>
			<if test="region != null">
				region = #{region},
			</if>
			<if test="description != null">
				description = #{description},
			</if>
		</set>
		where id = #{id}
	</update>
	
	<select id="findById" resultType="com.huawei.hicloud.pojo.Volume">
		SELECT <include refid="base_columns" />
		FROM VOLUME_T t
		where t.id = #{id}
	</select>
	
	<!-- 查询所有符合条件的记录 -->
	<select id="findList" parameterType="com.huawei.hicloud.pojo.Volume" resultType="com.huawei.hicloud.pojo.Volume">
		SELECT <include refid="base_columns" />
		FROM VOLUME_T t
		<where>
			<include refid="select_fragment" />
		</where>
	</select>
	
	<select id="findAll" resultType="com.huawei.hicloud.pojo.Volume">
		SELECT <include refid="base_columns" />
		FROM VOLUME_T t
	</select>
</mapper>

